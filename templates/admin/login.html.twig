{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block main %}
    <div class="container-fluid pt-5">    
        <form action="{{ path('login') }}" method="post">
            <div class="form-group w-50 m-auto pb-3 input-group-lg">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %} 
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="email" class="form-control"  placeholder="Mon email" required name="_username">
            </div>
            <div class="form-group w-50 m-auto input-group-lg">   
                <input type="password" class="form-control"  placeholder="Mon mot de passe" required name="_password">
            </div>
            <div class="text-center pt-5">
                <button type="submit" class="btn btn-primary submit-inscription w-25 rounded-pill">Connexion</button>          
            </div>
        </form>
    </div>  
{% endblock %}
