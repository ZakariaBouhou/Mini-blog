{% extends 'base.html.twig' %}

{% block main %}
    <div class="row mb-2">
        {% for article in articles %}            
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <a class="text-dark" href="{{ path('read_slug', {slug: article.slug}) }}">{{ article.title }}</a>
                        </h3>
                        <div class="mb-1 text-muted"> {{ article.createdAt|date('m-y') }}</div>
                        <p class="card-text mb-auto">{{ article.content|u.truncate(150, '...') }}</p>
                        <a href="{{ path('read_slug', {slug: article.slug}) }}">Continue reading</a>
                    </div>
                    {% if article.picture == true %}                  
                        <img class="card-img-right flex-auto d-none d-md-block" src="{{ asset('/uploads/'~ article.picture) }}"
                        alt="Card image cap">
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
